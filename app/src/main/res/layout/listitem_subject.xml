<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/tablerow_subject_name"
        android:background="@color/tablerow_backgnd"
        android:padding="@dimen/cell_padding"
        android:paddingLeft="@dimen/cell_sidepadding"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/row_margin"/>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:text="4.5"
        android:gravity="right"
        android:id="@+id/tablerow_subject_average"
        android:background="@color/tablerow_backgnd"
        android:paddingRight="@dimen/cell_sidepadding"
        android:padding="@dimen/cell_padding"
        android:textSize="@dimen/text_size"
        android:layout_marginBottom="@dimen/row_margin"/>

</LinearLayout>
